<table>
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td></td>
    <td class="p-2" >
      <%= book_comment.comment %>
    </td>
    <% if book_comment.user == current_user %>
      <td><%= link_to 'Destroy', book_book_comment_path(book_comment), method: :delete, class: "btn btn-danger btn-sm" %></td>
    <% end %>
  <% end %>
  </tr>
</table>
<%= form_with model: [book, book_comment] do |f| %>
  <div>
    <%= f.text_area :comment, size: "10x5", class: "form-control mb-1" %>
    <%= f.submit '送信' %>
  </div>
<% end %>